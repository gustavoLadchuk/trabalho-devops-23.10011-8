{
  "uid": "simple_dashboard",
  "title": "Dashboard Banco de Dados DevOps",
  "tags": ["Banco de Dados"],
  "timezone": "browser",
  "schemaVersion": 16,
  "version": 1,
  "panels": [
    {
      "type": "graph",
      "title": "Prometheus Node Status",
      "datasource": "Prometheus",
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 24,
        "h": 10
      },
      "targets": [
        {
          "expr": "up",
          "legendFormat": "Node {{instance}}",
          "refId": "A"
        }
      ],
      "xaxis": {
        "show": true
      },
      "yaxes": [
        {
          "format": "short",
          "show": true
        },
        {
          "show": true
        }
      ],
      "lines": true,
      "fill": 1,
      "linewidth": 2,
      "points": false,
      "pointradius": 2
    },
    {
      "type": "graph",
      "title": "Prometheus HTTP Requests",
      "datasource": "Prometheus",
      "gridPos": {
        "x": 0,
        "y": 10,
        "w": 24,
        "h": 10
      },
      "targets": [
        {
          "expr": "prometheus_http_requests_total",
          "legendFormat": "{{handler}} - {{job}}",
          "refId": "B"
        }
      ],
      "xaxis": {
        "show": true
      },
      "yaxes": [
        {
          "format": "short",
          "show": true
        },
        {
          "show": true
        }
      ],
      "lines": true,
      "fill": 1,
      "linewidth": 2,
      "points": false,
      "pointradius": 2
    },
    {
      "type": "graph",
      "title": "MariaDB Threads Connected",
      "datasource": "Prometheus",
      "gridPos": {
        "x": 0,
        "y": 20,
        "w": 24,
        "h": 10
      },
      "targets": [
        {
          "expr": "mariadb_threads_connected",
          "legendFormat": "Threads Connected",
          "refId": "C"
        }
      ],
      "xaxis": {
        "show": true
      },
      "yaxes": [
        {
          "format": "short",
          "show": true
        },
        {
          "show": true
        }
      ],
      "lines": true,
      "fill": 1,
      "linewidth": 2,
      "points": false,
      "pointradius": 2
    },
    {
      "type": "graph",
      "title": "MariaDB Queries",
      "datasource": "Prometheus",
      "gridPos": {
        "x": 0,
        "y": 30,
        "w": 24,
        "h": 10
      },
      "targets": [
        {
          "expr": "mariadb_queries",
          "legendFormat": "Queries",
          "refId": "D"
        }
      ],
      "xaxis": {
        "show": true
      },
      "yaxes": [
        {
          "format": "short",
          "show": true
        },
        {
          "show": true
        }
      ],
      "lines": true,
      "fill": 1,
      "linewidth": 2,
      "points": false,
      "pointradius": 2
    },
    {
      "type": "graph",
      "title": "Flask HTTP Requests",
      "datasource": "Prometheus",
      "gridPos": {
        "x": 0,
        "y": 40,
        "w": 24,
        "h": 10
      },
      "targets": [
        {
          "expr": "flask_http_request_total",
          "legendFormat": "Total Requests",
          "refId": "E"
        }
      ],
      "xaxis": {
        "show": true
      },
      "yaxes": [
        {
          "format": "short",
          "show": true
        },
        {
          "show": true
        }
      ],
      "lines": true,
      "fill": 1,
      "linewidth": 2,
      "points": false,
      "pointradius": 2
    }
  ],
  "refresh": "10s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "overwrite": true
}
